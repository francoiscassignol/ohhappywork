<div class="card">
  <h4 class="">Tools & Processes</h4>
  <p class="light-grey-text">Training, systems and methods indicator </p>
  <h4 class="light-font text-center"> Team's effectiveness </h4>
  <div class="frame">
    <% if tools <= 1  %>
      <p class="picto-inline align-vertical-center">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
      </p>
    <% elsif tools > 1 && tools <= 2 %>
      <p class="picto-inline align-vertical-center">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
      </p>
    <% elsif tools > 2 && tools <= 3 %>
      <p class="picto-inline align-vertical-center">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
      </p>
    <% elsif tools > 3 && tools <= 4 %>
      <p class="picto-inline align-vertical-center">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
      </p>
    <% elsif tools > 4 %>
      <p class="picto-inline align-vertical-center">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
      </p>
      <% else tools = nil %>
      <p class="light-font light-grey-text"> Waiting for data</p>
    <% end %>
  </div>
</div>
