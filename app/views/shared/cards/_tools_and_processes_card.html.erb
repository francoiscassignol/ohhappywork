<div class="card">
  <h4 class="">Tools & Processes</h4>
  <p class="light-grey-text">Training, systems and methods indicator </p>
  <div class="frame">
  <h4 class="light-font text-center"> Effectiveness score </h4><br>
    <% if rating <= 1  %>
      <p class="picto-inline align-vertical-center margin-topy">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
      </p>
    <% elsif rating > 1 && rating <= 2 %>
      <p class="picto-inline align-vertical-center margin-topy">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
      </p>
    <% elsif rating > 2 && rating <= 3 %>
      <p class="picto-inline align-vertical-center margin-topy">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
      </p>
    <% elsif rating > 3 && rating <= 4 %>
      <p class="picto-inline align-vertical-center margin-topy">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("grey-star.svg"), class: "picto" %>
      </p>
    <% elsif rating > 4 %>
      <p class="picto-inline align-vertical-center margin-topy">
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
        <%= image_tag asset_path("orange-star.svg"), class: "picto" %>
      </p>
      <% else rating = nil %>
      <p class="light-font light-grey-text"> Waiting for data</p>
    <% end %>
    <br><br><br>
  </div>
</div>
