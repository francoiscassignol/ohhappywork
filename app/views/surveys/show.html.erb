<!--Main dashboard-->
<div class="flex-container">
  <%= render "shared/sidebar" %>
  <div class="center">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <% if @team %>
            <% if @survey %>
              <h2 class="orange-font">Survey of <%= @survey.created_at.strftime("%m/%d/%Y") %></h2>
            <% end %>
          <% else %>
            <h1 class="orange-font light-font">All team's pulse dashboard</h1>
          <% end %>
        </div>
        <div class="col-md-4">
          <div class="dropdown right">
            <button class="dropbtn">Select your team <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span></button>
            <div class="dropdown-content">
              <!-- render dropdown -->
              <% @teams.each do |team| %>
                <%= link_to "#{team.name }", team_surveys_path(team) %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <br><br><br>

      <!-- CARDS / CATEGORIES  -->
      <div class="row card card-long-slim">
        <div class="col-md-2 margin-center">Well being</div>
          <div class="col-md-7 margin-center">
          <div class="progress small-bar">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50"aria-valuemin="0" aria-valuemax="100" style="width:<%= (@well_being / 5 * 100).round(0) %>%"><%= (@well_being / 5 * 100).round(0) %>%
            </div>
          </div>
        </div>
      <div class="col-md-3 margin-center"><%= link_to 'View question', question_path(@well_being_question), class: "button button-orange no-margin" %></div>
      </div>


      <div class="row card card-long-slim">
        <div class="col-md-2 margin-center">Personal growth</div>
          <div class="col-md-7 margin-center">
          <div class="progress small-bar">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50"aria-valuemin="0" aria-valuemax="100" style="width:<%= (@personal_growth / 5 * 100).round(0) %>%"><%= (@personal_growth / 5 * 100).round(0) %>%
            </div>
          </div>
        </div>
      <div class="col-md-3 margin-center"><%= link_to 'View question', question_path(@personal_growth_question), class: "button button-orange no-margin" %></div>
      </div>

      <div class="row card card-long-slim">
        <div class="col-md-2 margin-center">Collaboration</div>
          <div class="col-md-7 margin-center">
          <div class="progress small-bar">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50"aria-valuemin="0" aria-valuemax="100" style="width:<%= (@collaboration / 5 * 100).round(0) %>%"><%= (@collaboration / 5 * 100).round(0) %>%
            </div>
          </div>
        </div>
      <div class="col-md-3 margin-center"><%= link_to 'View question', question_path(@collaboration_question), class: "button button-orange no-margin" %></div>
      </div>

      <div class="row card card-long-slim">
        <div class="col-md-2 margin-center">Tools & Processes</div>
          <div class="col-md-7 margin-center">
          <div class="progress small-bar">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50"aria-valuemin="0" aria-valuemax="100" style="width:<%= (@tools / 5 * 100).round(0) %>%"><%= (@tools/ 5 * 100).round(0) %>%
            </div>
          </div>
        </div>
      <div class="col-md-3 margin-center"><%= link_to 'View question', question_path(@tool_question), class: "button button-orange no-margin" %></div>
      </div>

      <div class="row card card-long-slim">
        <div class="col-md-2 margin-center">Enterprise culture</div>
          <div class="col-md-7 margin-center">
          <div class="progress small-bar">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50"aria-valuemin="0" aria-valuemax="100" style="width:<%= (@enterprise_culture / 5 * 100).round(0) %>%"><%= (@enterprise_culture / 5 * 100).round(0) %>%
            </div>
          </div>
        </div>
      <div class="col-md-3 margin-center"><%= link_to 'View question', question_path(@enterprise_culture_question), class: "button button-orange no-margin" %></div>
      </div>
<%= link_to "Back to Dashboard", team_surveys_path(@team), class: "button button-white" %>
      </div>
    </div>
  </div>
  <div class="right">
  </div>
</div>
<% if params[:team_id] %>
  <%= render 'shared/modal' %>
<% end %>
