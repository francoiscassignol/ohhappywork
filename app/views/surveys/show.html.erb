<!--Main dashboard-->
<div class="flex-container">
  <div class="left">
    <div class="left-content">

      <div class="left-content-item">
        <%= image_tag 'dash-default', class: "padding-right icon-size", id: "dash" %>

        <p>All surveys results</p>
      </div>
      <div class="left-content-item">
        <%= image_tag "history-default", class: "padding-right icon-size", id: "history" %>
        <p>Specific survey results</p>
      </div>
      <div class="left-content-item">
        <%= image_tag "profile-default", class: "padding-right icon-size", id: "accout" %>
        <p>Account settings</p>
      </div>
    </div>
  </div>

  <div class="center">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <% @teams.each do |team| %>
            <h1 class="orange-font light-font"><%= team.name%>'s pulse dashboard</h1>
          <% end %>

        </div>
        <div class="col-md-4">
          <!--%=# link_to "Select your team", "#", class: "button button-white left-margin" %>-->
          <div class="dropdown right">
            <button class="dropbtn">Select your team <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span></button>
            <div class="dropdown-content">
              <% @teams.each do |team| %>
                <%= link_to "#{team.name }", team_surveys_path(team) %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="card orange-card">
            <h4>Global Happiness</h4>
            <%= link_to "Reviews", "#", class: "button button-white" %>
          </div>
        </div>

        <div class="col-md-4">
          <% if @well_being_question %>
            <%= link_to question_path(@well_being_question) do %>
              <%= render "well_being_card" %>
            <% end %>
          <% else %>
            <%= render "well_being_card" %>
          <% end %>
        </div>

        <div class="col-md-4">
          <div class="card">
            <h4>Personal growth</h4>
            <p class="light-grey-text">My team feel recognized and supported in their career path</p>
            <div class="frame">
              <h4 class="light-font text-center"> Fullfilment gauge </h4>
              <p><%= @personal_growth %></p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card">
            <h4>Collaboration</h4>
            <p class="light-grey-text">My team evolves in a collaborative environment </p>
            <div class="frame">
              <h4 class="light-font text-center"> Team's state </h4>
              <p><%= @collaboration %></p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card">
            <h4>Tools & Processes</h4>
            <p class="light-grey-text">My team has access to everything they need</p>
            <div class="frame">
              <h4 class="light-font text-center"> Team's effectiveness </h4>
              <p><%= @tools %></p>
            </div>
          </div>
        </div>


        <div class="col-md-4">
          <div class="card">
            <h4>Enterprise culture</h4>
            <p class="light-grey-text">Engagement, purpose, strategy</p>
            <div class="frame">
              <h5 class="light-font text-center"> Team's rating </h5>
              <p><%= @enterprise_culture %></p>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>
  <div class="right">

  </div>
</div>


